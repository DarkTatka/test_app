<h1>New post</h1>

<% semantic_form_for(@post, :html => {:class => 'left validate'}) do |f| %>
  <%= f.error_messages %>
  
  <% f.inputs :title => '<strong>semantic_form_for(@post) do |f|</strong>' do %>
    <%= f.input :title %>
    <%= f.input :body, :input_html => {:rows => 8} %>
    <%= f.input :published %>
  <% end %>
  
  <% f.inputs :title => '<strong>f.inputs(:for => :thing)</strong>', :for => :thing do |g| %>
    <%= g.input :name %>
    <%= g.input :about, :input_html => {:rows => 8} %>
  <% end %>
  
  <% f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>

<% form_for(@post, :html => {:class => 'formtastic right'}) do |f| %>
  <%= f.error_messages %>
  
  <fieldset class="inputs">
    <legend><span><strong>form_for(@post) do |f|</strong></span></legend>
    <ol>
      <li class="string">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </li>
      <li class="text">
        <%= f.label :body %>
        <%= f.text_area :body, :rows => 8 %>
      </li>
      <li class="boolean">
        <%= f.label :published %>
        <%= f.check_box :published %>
      </li>
    </ol>
  </fieldset>
  
  <fieldset class="inputs">
    <legend><strong>f.fields_for(:thing)</strong></legend>
    <ol>
    <% f.fields_for :thing do |g| %>
      <li class="string">
        <%= g.label :name %>
        <%= g.text_field :name %>
      </li>
      <li class="text">
        <%= g.label :about %>
        <%= g.text_area :about, :rows => 8 %>
      </li>
    <% end %>
    </ol>
  </fieldset>
  
  <fieldset class="buttons">
    <ol>
      <li class="commit">
        <%= f.submit 'Create Post' %>
      </li>
    </ol>
  </fieldset>
<% end %>

<p class="links">
  <%= link_to 'Back', posts_path %>
</p>